# Core Supabase Configuration (.env)
# Required for both development and production
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=allied_health_assessment
JWT_SECRET=your_jwt_secret_min_32_chars

# Authentication Keys (.env)
# Required for both development and production
# Generate using `supabase gen keys` for production
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Development Settings (.env)
NODE_ENV=development
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here

# Next.js Configuration (.env.local)
# Development URLs
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key
NEXT_PUBLIC_DASHBOARD_URL=http://127.0.0.1:54323

# Production Settings (.env.production)
# NODE_ENV=production
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key

# Optional Services (Add to appropriate .env file based on environment)
# OPENAI_API_KEY=your_openai_key_here  # Required if using AI features
# SENDGRID_API_KEY=your_sendgrid_key   # Required for production email

# Storage Configuration (Production only)
# S3_HOST=your_s3_host
# S3_REGION=your_s3_region
# S3_ACCESS_KEY=your_s3_access_key
# S3_SECRET_KEY=your_s3_secret_key

# Security Settings (Production only)
# AUTH_MFA_ENABLED=true
# AUTH_CAPTCHA_ENABLED=true
# AUTH_CAPTCHA_SECRET=your_captcha_secret

# Rate Limiting (Production only)
# MAX_REQUESTS_PER_MINUTE=100
# MAX_CONCURRENT_CONNECTIONS=50

# Note: This is an example file. Copy to appropriate .env files and fill in values:
# - Copy to .env for core Supabase configuration
# - Copy relevant sections to .env.local for Next.js configuration
# - Create .env.production for production deployment (never commit to git)
